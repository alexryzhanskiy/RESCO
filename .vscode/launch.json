    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${command:pickArgs}"
            ]
        },
        {
            "name": "Python: Debug main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/resco_benchmark/main.py",
            "console": "integratedTerminal",
            "args": [
                "--agent", "MPLightCO2Multiple",
                "--eps", "10",
                "--map", "grid4x4",
                "--procs", "1",
                "--libsumo", "True"
            ]
        }
    ]
}